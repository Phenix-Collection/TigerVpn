<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activeServer"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarr"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:visibility="visible"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <RelativeLayout
                android:id="@+id/homeContextRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/uifor">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp">


                    <RelativeLayout
                        android:id="@+id/rl_main_booster"
                        android:layout_width="170dp"
                        android:layout_height="170dp"

                        android:layout_above="@+id/elapse2"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">


                        <ImageView

                            android:id="@+id/hi"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/hii"

                            />


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/elapse2"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="109dp"
                        android:gravity="center"

                        android:text="No VPN Connected"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="235dp"
                    android:background="@drawable/mygradientbackground">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/texts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@android:drawable/bottom_bar"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp"
                            android:text="@string/mainText"
                            android:textAlignment="gravity"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <android.support.v7.widget.GridLayout xmlns:grid="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/mainGrid"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="4"
                            grid:alignmentMode="alignMargins"
                            grid:columnCount="2"
                            grid:columnOrderPreserved="false"
                            grid:rowCount="2">


                            <!-- Row 1 -->

                            <!-- Column 1 -->
                            <android.support.v7.widget.CardView
                                android:id="@+id/homeBtnRandomConnection"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                grid:layout_columnWeight="1"
                                grid:layout_rowWeight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/star" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="VIP Server"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView
                                android:id="@+id/homeBtnChooseCountry"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                grid:layout_columnWeight="1"
                                grid:layout_rowWeight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/shield" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Choose Server"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/share"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"

                                grid:layout_columnWeight="1"
                                grid:layout_rowWeight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"

                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/share" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Share"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/homeBtnChooseCountry1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"

                                grid:layout_columnWeight="1"
                                grid:layout_rowWeight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"

                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/exit" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Exit"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <!-- Row 2 -->

                            <!-- Column 1 -->

                            <!-- Column 2 -->


                            <!-- Row 2 -->

                            <!-- Column 1 -->

                            <!-- Column 2 -->


                        </android.support.v7.widget.GridLayout>

                        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/admob_adview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:visibility="visible"
                            ads:adSize="BANNER"
                            ads:adUnitId="@string/banner_ad_unit" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        app:headerLayout="@layout/tiger_nav_header"
        app:itemIconTint="@color/nav_draw_icon"
        app:menu="@menu/activity_drawer" />

</android.support.v4.widget.DrawerLayout>